<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".AddListingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/colorPrimary">

            <TextView
                android:id="@+id/txtAddOffer"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/bungee"
                android:text="Add Listing"
                android:textColor="@color/black"
                android:textSize="34sp" />

        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="93dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">


            <TextView
                android:id="@+id/warningTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add a title"
                android:textColor="@color/red"
                android:visibility="gone" />

            <EditText
                android:id="@+id/edtTxtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="12"
                android:hint="Listing title"
                android:inputType="textNoSuggestions" />

            <Spinner
                android:id="@+id/spinnerUniversity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_layout"
                android:elevation="5dp"
                android:entries="@array/Universities" />

            <!--            <Spinner-->
            <!--                android:id="@+id/spinnerCourseCode"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginTop="16dp"-->
            <!--                android:background="@color/colorPrimary"-->
            <!--                android:entries="@array/CourseCodes" />-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/warningCourseCode"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Add a course code"
                    android:textColor="@color/red"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/warningCourseName"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="130dp"
                    android:text="Add a course name"
                    android:textColor="@color/red"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edtTxtCourseCode"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:hint="Course Code" />

                <EditText
                    android:id="@+id/edtTxtCourseName"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="130dp"
                    android:hint="Course Name" />

            </RelativeLayout>

            <TextView
                android:id="@+id/txtCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Select category:" />

            <RadioGroup
                android:id="@+id/rgCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_layout"
                android:elevation="5dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:paddingRight="16dp"
                    android:text="Notes" />

                <RadioButton
                    android:id="@+id/rbSummary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="16dp"
                    android:text="Summary" />

                <RadioButton
                    android:id="@+id/rbBook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="6dp"
                    android:text="Book" />
            </RadioGroup>

            <TextView
                android:id="@+id/txtDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Description:" />

            <EditText
                android:id="@+id/edtTxtDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:singleLine="false" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtUploadDocument"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="16dp"
                    android:text="Upload document:" />

                <ImageButton
                    android:id="@+id/btnUploadDocument"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="130dp"
                    android:background="@drawable/bg_layout"
                    android:elevation="5dp"
                    app:srcCompat="@drawable/ic_add"
                    app:tint="@color/black" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtUploadPicture"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Upload picture:" />

                <ImageButton
                    android:id="@+id/btnUploadPicture"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="130dp"
                    android:background="@drawable/bg_layout"
                    android:elevation="5dp"
                    app:srcCompat="@drawable/ic_add"
                    app:tint="@color/black" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/imgView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:visibility="visible" />

            <RadioGroup
                android:id="@+id/rgBid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_layout"
                android:elevation="5dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbSetPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:paddingRight="16dp"
                    android:text="Set price" />

                <RadioButton
                    android:id="@+id/rbBidding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="6dp"
                    android:text="Bidding" />

            </RadioGroup>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/txtPrice"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Set Price:" />

                <TextView
                    android:id="@+id/txtEuro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="200dp"
                    android:text="EURO" />

                <EditText
                    android:id="@+id/edtTxtPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="100dp"
                    android:ems="5"
                    android:inputType="numberDecimal"
                    android:text="0.00" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/btnPublish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/btn_bg"
                    android:elevation="5dp"
                    android:text="Publish" />
            </RelativeLayout>

            <!--            <TextView-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:id="@+id/searchableSpinner"-->
            <!--                android:hint="Select university"-->
            <!--                android:padding="12dp"-->
            <!--                android:gravity="center_vertical"-->
            <!--                android:background="@drawable/bg_layout"-->
            <!--                />-->
        </LinearLayout>
    </ScrollView>
</RelativeLayout>