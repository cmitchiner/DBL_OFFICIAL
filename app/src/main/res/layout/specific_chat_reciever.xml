<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp">

    <RelativeLayout
        android:id="@+id/layoutForMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="50dp"
        android:background="@drawable/reciever_chat_bubble">

        <TextView
            android:id="@+id/senderTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sender Message Display Here"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:paddingLeft="7dp"
            android:paddingRight="40dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp" />

        <ImageView
            android:id="@+id/senderImageView"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:maxWidth="200dp"
            android:adjustViewBounds="true"
            android:maxHeight="200dp"
            android:scaleType="centerInside"
            android:src="@drawable/profile" />

        <TextView
            android:id="@+id/timeOfSentMsgTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_toRightOf="@+id/senderTextView"
            android:layout_marginLeft="-40dp"
            android:layout_alignBottom="@id/senderTextView"
            android:text="20:00"
            android:textStyle="italic"
            android:padding="7dp"
            android:textColor="#434343" />


    </RelativeLayout>

</RelativeLayout>